<div class="col-lg-12 mt-3 mb-3" id="PersonalityCard">

    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <div class="card-img p-5">
                    <img src="{{ImageURL}}" alt="{{ImageAlt}}" class="card-img p-0">
                    <p class="text-center">
                        Image Source: <a href="{{ImageCreditURL}}" class="card-link" target="_blank">{{ImageCredit}}</a>
                    </p>

                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body p-5">
                    <h4 class="card-title font-weight-bold text-left">{{Name}}</h4>
                    <p>
                        [<a href="{{Website}}" class="card-link" target="_blank">Website</a>]
                        <br />
                        Profession: {{Profession}}
                        <br />
                        Nationality: {{Nationality}}
                        <br />
                        Favourite Work: <a href="{{FavouriteWorkURL}}" class="card-link"
                            target="_blank">{{FavouriteWorkTile}}</a>
                    </p>

                    <blockquote class="card-text">
                        {{Description}}
                    </blockquote>
                    [<a href="{{CitattionURL}}" class="card-link" target="_blank">{{CitationTitle}}</a>]
                </div>
            </div>
        </div>

    </div>

</div>
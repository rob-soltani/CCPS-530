extends layout

block content
    div(class="col-lg-10")

        a(href="/bookinventory/add")
            button(type="button", class="btn btn-success", style="margin-right:10px") Add a Book

        br

        a(href="/")
            button(type="button", class="btn btn-secondary") Go Back to Home Page

        br
        br
        
        table.table.table-striped
            thead
                tr 
                    th(scope="col") #
                    th(scope="col", style='text-align:left') Title
                    th(scope="col") Author
                    th(scope="col") Publisher
                    th(scope="col") Date
                    th(scope="col") Website
            tbody
                - each val, index in books            
                    tr
                        th(scope="row") #{index + 1}
                        td(style='text-align:left') #{val.title}
                        td #{val.author}
                        td #{val.publisher}
                        td #{val.date}
                        td
                            a(href='#{val.website}', target="_blank") Book's URL

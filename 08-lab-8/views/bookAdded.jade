extends layout

block content
    div(class="col-lg-4")
        div(class="alert alert-success", role="alert")
            | A book titled "#{book.title}" was successfully added

        a(href="/bookinventory/add")
            button(type="button", class="btn btn-success", style="margin-right:10px") Add another Book

        a(href="/")
            button(type="button", class="btn btn-secondary") Go Back to Home Page

        br

        a(href="/bookinventory/list", target="_blank")
            button(type="submit", class="btn btn-primary", style="margin-right:10px") View Books (JSON)

        a(href="/bookinventory/list_table")
            button(type="submit", class="btn btn-primary", style="margin-right:10px") View Books (Table)
